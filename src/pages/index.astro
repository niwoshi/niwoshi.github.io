---
import Layout from '../layouts/Layout.astro';
---

<Layout title="niwoshi">
  <div class="min-h-screen bg-[#0d1117] text-white flex items-center justify-center relative overflow-hidden">
    <!-- Grid background -->
    <div class="fixed inset-0 pointer-events-none z-0">
      <svg class="w-full h-full opacity-20" xmlns="http://www.w3.org/2000/svg">
        <defs>
          <pattern id="grid" width="40" height="40" patternUnits="userSpaceOnUse">
            <path d="M 40 0 L 0 0 0 40" fill="none" stroke="currentColor" stroke-width="0.5" class="text-[#00d4ff]" />
          </pattern>
        </defs>
        <rect width="100%" height="100%" fill="url(#grid)" />
      </svg>
    </div>

    <!-- Content -->
    <main class="relative z-10 text-center px-4">
      <div class="mb-12">
        <div class="flex items-center justify-center gap-2 mb-6">
          <div class="w-2 h-2 rounded-full bg-[#00ff88] animate-pulse"></div>
          <span class="font-mono text-sm text-[#00ff88]">~/</span>
        </div>
        <h1 class="text-6xl md:text-8xl font-mono mb-4 tracking-tight">
          niwoshi<span class="text-[#00d4ff]">_</span>
        </h1>
        <p class="font-mono text-gray-400 text-sm md:text-base">
          // select a path
        </p>
      </div>

      <!-- Navigation cards -->
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6 max-w-2xl mx-auto">
        <!-- /me card -->
        <a href="/me" class="group relative block">
          <div class="relative bg-[#161b22] border-2 border-gray-800 rounded-lg p-8 hover:border-[#00ff88] transition-all duration-300 hover:shadow-[0_0_30px_rgba(0,255,136,0.2)]">
            <!-- Corner nodes -->
            <div class="absolute top-2 left-2 w-2 h-2 rounded-full bg-gray-700 group-hover:bg-[#00ff88] transition-colors"></div>
            <div class="absolute top-2 right-2 w-2 h-2 rounded-full bg-gray-700 group-hover:bg-[#00ff88] transition-colors"></div>

            <div class="text-4xl mb-4">
              <svg class="w-12 h-12 mx-auto text-[#00ff88]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
              </svg>
            </div>
            <h2 class="font-mono text-2xl text-[#00ff88] mb-2">/me</h2>
            <p class="text-gray-400 text-sm">趣味・プライベート</p>
            <p class="text-gray-500 text-xs mt-2 font-mono">// interests, hobbies, life</p>
          </div>
        </a>

        <!-- /dev card -->
        <a href="/dev" class="group relative block">
          <div class="relative bg-[#161b22] border-2 border-gray-800 rounded-lg p-8 hover:border-[#00d4ff] transition-all duration-300 hover:shadow-[0_0_30px_rgba(0,212,255,0.2)]">
            <!-- Corner nodes -->
            <div class="absolute top-2 left-2 w-2 h-2 rounded-full bg-gray-700 group-hover:bg-[#00d4ff] transition-colors"></div>
            <div class="absolute top-2 right-2 w-2 h-2 rounded-full bg-gray-700 group-hover:bg-[#00d4ff] transition-colors"></div>

            <div class="text-4xl mb-4">
              <svg class="w-12 h-12 mx-auto text-[#00d4ff]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4" />
              </svg>
            </div>
            <h2 class="font-mono text-2xl text-[#00d4ff] mb-2">/dev</h2>
            <p class="text-gray-400 text-sm">技術・制作</p>
            <p class="text-gray-500 text-xs mt-2 font-mono">// code, hardware, projects</p>
          </div>
        </a>
      </div>

      <!-- Footer hint -->
      <div class="mt-16 font-mono text-xs text-gray-600">
        <p>&lt; built with Astro + React /&gt;</p>
      </div>
    </main>
  </div>
</Layout>
